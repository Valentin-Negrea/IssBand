        <Label fx:id="eventDateLabel" layoutX="20.0" layoutY="80.0" text="Date:" />
        <Label fx:id="eventVenueLabel" layoutX="20.0" layoutY="110.0" text="Venue:" />
        <Label fx:id="bandsLabel" layoutX="20.0" layoutY="150.0" text="Bands:" />
        <Label fx:id="ticketsLabel" layoutX="20.0" layoutY="200.0" text="TicketID:" />
        <Label fx:id="audienceLabel" layoutX="20.0" layoutY="250.0" text="Audience:" />
